{% set title = "Affichage de la candidature" %}
{% extends 'admin_table.html.twig' %}


{% block table_content %}    


        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ apply.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ apply.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ apply.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ apply.email }}</td>
            </tr>
            <tr>
                <th>Message de candidature</th>
                <td>{{ apply.message }}</td>
            </tr>
            <tr>
                <th>Envoyée le</th>
                <td>{{ apply.sendAt ? apply.sendAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between">  
    <a href="{{ path('app_admin_apply_edit', {'id': apply.id}) }} " class="btn btn-primary my-3">Modifier</a> <br>
    {{ include('admin/apply/_delete_form.html.twig') }}
    </div>

    <a href="{{ path('app_admin_apply_index') }}" class="btn btn-primary">Retour</a>

{% endblock %}
