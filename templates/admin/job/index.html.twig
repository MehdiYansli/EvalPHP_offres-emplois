{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    <h1>Job index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Department</th>
                <th>City</th>
                <th>Description</th>
                <th>SendAt</th>
                <th>EndDate</th>
                <th>Salary</th>
                <th>Type</th>
                <th>Duration</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.title }}</td>
                <td>{{ job.department }}</td>
                <td>{{ job.city }}</td>
                <td>{{ job.description }}</td>
                <td>{{ job.sendAt ? job.sendAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job.endDate ? job.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ job.salary }}</td>
                <td>{{ job.type }}</td>
                <td>{{ job.duration }}</td>
                <td>
                    <a href="{{ path('app_admin_job_show', {'id': job.id}) }}">show</a>
                    <a href="{{ path('app_admin_job_edit', {'id': job.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_job_new') }}">Create new</a>
{% endblock %}
